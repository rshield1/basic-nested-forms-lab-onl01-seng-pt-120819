<%= form_for @recipe do |f| %>

  <%= f.label "Recipe title:" %>
  <%= f.text_field :title %>

  <%= f.fields_for :ingredients do |inner_form| %>
    <%= inner_form.label :name %>
    <%= inner_form.text_field :name %>

    <%= inner_form.label :quantity %>
    <%= inner_form.text_field :quantity %>
  <% end %>

  <%= f.submit %>
<% end %>